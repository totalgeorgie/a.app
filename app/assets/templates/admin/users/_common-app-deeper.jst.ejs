<hr>
<div class="col-sm-12 col-md-6">
  <label>Job Interest</label>
  <p><%= user.commonApp().escape('job_interest') %></p>
  <label> Mark where you priorities are right now</label>
  
  <div class="slider-opts">
    <span>Maximize salary</span>
    <div class="slider slider-horizontal" style="width: 150px">
      <div class="slider-track">
        <% var salaryPref = user.commonApp().escape('salary_pref') %>
        <% var salaryPercent = (50 + +salaryPref) %>
        <div class="slider-selection" style="left:0%; width:<%= salaryPercent %>%"></div>
        <div class="slider-handle round" style="left: <%= salaryPercent %>%"></div>
      </div>
    </div><!--slider-->
    <span>Gain experience</span>
  </div>

  <div class="slider-opts">
    <span>Work in established systems</span>
    <div class="slider slider-horizontal" style="width: 150px">
      <div class="slider-track">
        <% var culturePref = user.commonApp().escape('culture_pref') %>
        <% var culturePercent = (50 + +culturePref) %>
        <div class="slider-selection" style="left:0%; width:<%= culturePercent %>%"></div>
        <div class="slider-handle round" style="left: <%= culturePercent %>%"></div>
      </div>
    </div><!--slider-->
    <span>Develop new projects</span>
  </div>
  
  <p>&nbsp;</p>

  <label>China Work Force Goals</label>
  <p><%= user.commonApp().escape('china_goals') %></p>
</div>
<div class="col-sm-12 col-md-6">
  <label>In One Sentence, what career opportunities are you looking for right now?</label>
  <p><%= user.commonApp().escape('china_time') %></p>

  <label><%= user.commonApp().escape('bonus_choice') || 'Bonus question not chosen' %></label>
  <p><%= user.commonApp().escape('bonus_question') %></p>
</div>

<% if ( user.get('sourced') ) { %>
  <div class="col-sm-12">
    <hr>
  </div>

  <div class="col-sm-12 col-md-6">
    <label>Profile Link</label>
    <% if (!!user.get('extra_info').linkedin_url) { %>
      <p><a href="<%= user.get('extra_info').linkedin_url %>"><%= user.get('extra_info').linkedin_url %></a></p>
    <% } else { %>
      <p>N/A</p>
    <% } %>
    <label>Objective</label>
    <p><%= user.get('extra_info').objective %></p>
    <label>Experience 1</label>
    <p><%= user.get('extra_info').experience_1 %></p>
  </div>

  <div class="col-sm-12 col-md-6">
    <label>School/Major</label>
    <p><%= user.get('extra_info').education %></p>
    <label>Exerience 2</label>
    <p><%= user.get('extra_info').experience_2 %></p>
    <label>Other</label>
    <p><%= user.get('extra_info').other %></p>
  </div>
<% } %>