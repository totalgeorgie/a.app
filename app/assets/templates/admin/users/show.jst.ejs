<div class="admin-profile-header clearfix">
  <div class="col-sm-12 col-md-10">
    <div class="title">
      <h3><%= user.escape('name') %>
         <a href="mailto:<%= user.escape('email')%>" ><%= user.escape('email')%></a>
      </h3>
    </div><!-- title-->
  </div><!--col-sm-12-->
  <div class="col-sm-12 col-md-2">
    <div class="row">
      <div class="col-sm-6">
        <a herf="#" class="btn btn-danger">Link &rarr;</a>
      </div>
      <div class="col-sm-6">
        <a href="#" class="btn btn-danger">Resume</a>
      </div>
    </div>
  </div><!--buttons on right-->
</div><!--header-->
<% var videoCode = user.video().get('video_uuid') %>

<% if (videoCode) { %>
  <div class="col-md-3 col-lg-2 profile-video">
    <video id='video-<%= user.id %>' data-uuid='<%= videoCode %>'></video>
  </div>
<% } %>
  
<div class="col-sm-12 col-md-4">
  <div class="admin-profile-answer">
    <div class="candidate-info">
      <span class="content">
        <%= user.commonApp().escape('industries') %> 
      </span>
      
      <span class="content">
        <span class="red"><%= user.commonApp().escape('current_city') %></span>
        <%= user.commonApp().get('cities') %>
      </span>
      
        <div class="candidate-icons">
          <div class="row">
            <div class="col-sm-12 col-md-6">
              <div class="icon-bubble">
                <span class="glyphicon glyphicon-briefcase"></span>
                <span class="red"><%= user.commonApp().escape('grad_year') %></span>
              </div>
            </div>
            <div class="col-sm-12 col-md-6">
              <div class="icon-bubble">
                <span class="glyphicon glyphicon-magnet"></span>
                <span class="red"><%= user.commonApp().escape('china_time') %></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="icon-bubble">
                <span class="glyphicon glyphicon-user"></span>
                <span class="red"><%= user.commonApp().escape('nationality') %></span>
              </div>
            </div>
          </div>
        </div><!--candidate icons-->
    </div><!-- candidate info-->
  </div><!--admin-profile-answer-->
</div>

<div class="<%= videoCode ? 'col-md-7 col-lg-6' : 'col-md-8' %>">
  <div class="admin-note">
    <div class="form-group">
      <textarea name="admin_note" 
        class="common-app-field form-control"><%= user.commonApp().escape('admin_note') %>
      </textarea>
    </div>
  </div>
</div>
<div class="col-sm-12">
  <div class="row">
  <hr>
  <div class="col-sm-12 col-md-6">
    <label>Salary Determination</label>
    <p><%= user.commonApp().escape('ideal_salary') %></p>
    <label>China Work Force Goals</label>
    <p><%= user.commonApp().escape('ideal_salary') %></p>
  </div>
  <div class="col-sm-12 col-md-6">
    <label><%= user.commonApp().escape('bonus_choice') || 'Bonus question not chosen' %></label>
    <p><%= user.commonApp().escape('ideal_salary') %></p>
  </div>
  </div> 
</div>
<div class="col-sm-12">
  <div class="row">
    <hr>
    <div class="col-sm-12 col-md-6">
      <div class="applications">
        <table class="table">
          <tbody>
            <% if (user.jobApps().length === 0) { %>
              <h3 class="pagination-centered"> <%= user.escape('name') %> hasn't applied to any jobs.</h3>
            <% } %>
            <% user.jobApps().each(function(jobApp) { %>
              <tr>
                  <td><a href="<%= Atlas.url + 'applications/' + jobApp.id %>"><%= jobApp.escape('job_title') %></a></td>
              </tr>
             <% }) %>
          </tbody>
        </table>
      </div><!--applications-->
    </div><!--col-6-->
    <div class="col-sm-12 col-md-6">
      <div class="applications">
        <table class="table">
          <tbody>
            <% if (user.potentials().length === 0) { %>
              <h3 class="pagination-centered"> <%= user.escape('name') %> doesn't have any good fits'</h3>
            <% } %>
            <% user.jobApps().each(function(jobApp) { %>
              <tr>
                  <td><a href="<%= Atlas.url + 'applications/' + jobApp.id %>"><%= jobApp.escape('job_title') %></a></td>
              </tr>
             <% }) %>
          </tbody>
        </table>  
      </div><!-- applications -->
    </div><!--col 6-->
  </div><!--row-->
</div><!--col-12>