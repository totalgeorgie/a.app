<% var userName = user.escape('name') %>

<div class="form-group <%= userName ? 'has-success has-feedback' : null %>">
  <label for="full_name">Full Name</label>
  <input id="full_name" class="form-control user-field" type="text" name="name" value="<%= userName%>">
  <% if (userName) { %>
      <span class="glyphicon glyphicon-ok form-control-feedback"></span>
  <% } %>
</div>

<% var userCountry = user.commonApp().escape('nationality') %>
<div class="form-group <%= userCountry ? 'has-success has-feedback' : null %>">
  <label for="nationality">Nationality</label>
  <select id="nationality" name="nationality" class="common-app-field form-control chosen-select"> 
    <% _.each(Atlas.countries, function(country){ %>
      <option value="<%= country[1] %>" <%= userCountry === country[1] ? 'selected' : null %> ><%= country[0] %></option>
    <% }) %>
  </select>

  <% if (userCountry) { %>
      <span class="glyphicon glyphicon-ok form-control-feedback"></span>
  <% } %>
</div>

<% var userCity = user.commonApp().escape('current_city') %>
<div class="form-group <%= userCity ? 'has-success has-feedback' : null %>">
  <label for="full_name">Current City</label>
  <input id="full_name" class="form-control common-app-field" type="text" name="current_city" placeholder="e.g Toronto" value="<%= userCity %>">
  <% if (userCity) { %>
      <span class="glyphicon glyphicon-ok form-control-feedback"></span>
  <% } %>
</div>


<% var gradYear = user.commonApp().escape('grad_year') %>
<div class="form-group <%= gradYear ? 'has-success has-feedback' : null %>">
  <label for="grad_year">Graduation Year</label>
  <select id="grad_year" name="grad_year" class="common-app-field form-control chosen-select"> 
    <% _.each(Atlas.gradOptions, function(year){ %>
      <option value="<%= year %>" <%= gradYear === year ? 'selected' : null %> ><%= year %></option>
    <% }) %>
  </select>

  <% if (gradYear) { %>
      <span class="glyphicon glyphicon-ok form-control-feedback"></span>
  <% } %>
</div>