<div class="profile-body applications">
  <h2 class="container_header">My Job Applications</h2>
  <div class="col-sm-12">
    
    <table class="table">
      <tbody>
        <% if (jobApps.length === 0) { %>
          <h3 class="pagination-centered"> You haven't applied to any jobs. click below to apply now!</h3>
        <% } %>
        <% jobApps.each(function(jobApp) { %>
          <tr>
              <td><a href="<%= Atlas.url + 'applications/' + jobApp.id %>"><%= jobApp.escape('job_title') %></a></td>
              <td><a href="<%= Atlas.url + 'applications/' + jobApp.id + '/edit' %>">Edit My Application</a></td>
              <td><a href="#" class="cancel">Cancel My Application</a>
          </tr>
         <% }) %>
      </tbody>
    </table>

    <% if (potentialJobs.length > 0) { %>
      <div class="potential-jobs clearfix">
        <h2>We have <%= potentialJobs.length %> <%= potentialJobs.length > 1 ? "jobs" : "job" %> that might be of interest to you!</h2>
        <ul class="public-job-list">
          <% potentialJobs.each(function(job) { %>
            <li>

              <div class="list-job-container opp">
                <div class="col-sm-10">
                  <div class="main_info">
                    <h3><a href="<%= job.url() %>"><%= job.escape('title') %></a></h3>
                    <p><%= job.escape('summary') %></p>
                  </div>
                </div><!--col-sm-10-->
                <div class="col-sm-2">
                  <div class="apply">
                    <a href="<%= job.url() %>" class="atlas_button box_button">Apply Now</a>
                    <p class="full_desc"><a href="<%= job.url() %>">See full description</a></p>
                  </div>
                </div><!--col-sm-2-->
              </div>
            </li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <div class="center_button">
      <a href="<%= Atlas.url %>" class="atlas_button">Apply to more jobs!</a>
    </div>
  </div>
</div>
