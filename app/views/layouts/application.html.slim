doctype html 
html
  head 
    title == full_title(yield(:title))
    == stylesheet_link_tag    "application", media: "all"
    script src="//cameratag.com/2.0/cameratag.js" type="text/javascript"
    script src="//fast.fonts.net/jsapi/f8f1480d-1950-4ce9-a2d4-ceead4937a67.js" type="text/javascript"
    == javascript_include_tag "application"
    == csrf_meta_tags
    == render 'layouts/shim'

body
  #before_footer
    == render 'layouts/header'
    == render 'layouts/notice'
    == yield
    
    .container
      == debug(params) if Rails.env.development? 
    
  == render 'layouts/footer'