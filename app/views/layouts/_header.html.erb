  <div class="container">
    <header>
        <div class="row">
            <div class="span3">
                <div id="logo">
                     <%= link_to image_tag("logo.png", alt: full_title(yield(:title)) ), root_path, class: "brand" %>
                </div>
            </div><!--span3-->
            <div class="span9">
              <% if signed_in? %>
                <%= link_to "Sign out", signout_path, method: "delete" %>
                <%= link_to "Settings", edit_user_path(current_user) %>
              <% else %>
                <li><%= link_to "Sign in", signin_path %></li>
              <% end %>
            </div>
        </div><!--row-fluid header-->
    </header><!--header-->
   </div><!--container.header-->