  $(function(){
    Atlas.url = "#{root_url}";
    
    Atlas.initialize({
      rootEl: $('.common-app-container'),
      progressEl: $('.profile_progress'),
      navEl: $('.top-navigation'),
      userId: #{ @user.id },
      data: JSON.parse($('#data').html())
    });  
  });