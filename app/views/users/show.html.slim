== provide(:title, "Edit My Profile")

.profile_progress  
.first_container
  .top-navigation         
  .container
    .common-app-container

script#data
  == {  cities: City.select(:id, :name).all, 
        industries: Industry.select(:id, :name).all,
        grad_options: CommonApp::GRAD_OPTIONS,
        salary_options: CommonApp::SALARY_OPTIONS,
        countries: Country::Names }.to_json

