<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>


<%if @user.common_app.present? %>
	<h4>The status of common app coming soon</h4>
	<%= link_to "Show Common App", common_app_path %><span>, </span>
	<%= link_to "Edit Common App", edit_common_app_path %>
		<p> &nbsp; </p>
	<% if @user.video.present? %>
		<%= link_to "See my video", video_path %>
		<%= link_to "Edit my video", edit_video_path %>
	<%else%>
		<h5> It looks like you haven't made a video. Click <%= link_to 'Create Video', new_video_path %> to make one</h5>
	<% end %>
<% else %>
	<h4> It looks like you haven't filled in your common application. Click the button below to get started <br/> &nbsp; </h4> 
	<%= link_to "Get Started", new_common_app_path, :class => "button" %>
		<p> &nbsp; </p>
	<% if @user.video.present? %>
		<%= link_to "See my video", video_path %>
		<%= link_to "Edit my video", edit_video_path %>
	<%else%>
		<h5> It looks like you haven't made a video. Click <%= link_to 'Create Video', new_video_path %> to make one</h5>
	<% end %>

<% end %>
<hr />
<% if @user.applications.present? %>
	<h4>You have applied to <%= pluralize(@user.applications.count, "job") %></h4>
	<ul>
	<% @user.applications.each do |application| %>
		<li> <%= link_to application.job.job_title, job_application_path(:id => application.id, :job_id => application.job_id) %>  
			/  <%= link_to "Edit", edit_job_application_path(:id => application.id, :job_id => application.job_id) %>  
			/  <%= link_to "delete", job_application_path(:id => application, :job_id => application.job_id), method: :delete,
                                  data: { confirm: "Are you sure you would like to delete your application?" } %>
		 </li>
	<% end %>
	</ul>
	<br/>
	<%= link_to "Apply to more jobs!", jobs_path, :class => "button" %>
<% else %>
	<h4> It looks like you haven't applied to any jobs, click the button below to get started! </h4>
	<hr>
	<%= link_to "Apply to more jobs!", jobs_path, :class => "button" %>
<% end %>

